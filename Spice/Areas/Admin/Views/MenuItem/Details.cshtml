@model MenuItem
@using Spice.Extenstion;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit MenuItems</h2>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    @Html.TextAreaFor(m => m.Description)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" disabled />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category.Name" class="form-control" disabled/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SubCategory" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SubCategory.Name" class="form-control" disabled  />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Spicyness" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control" disabled></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_DetailsAndBackToListButton" model="Model.Id" />
                </div>
            </div>

        </div>
        <div class="col-4">
            <img src="@Model.Image" width="100%" style="border-radius:5px;" />
        </div>

    </div>
</form>

@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        tinymce.init({
            selector: 'textarea',
            height: 250,
            plugins: "lists",
            menubar: 'file edit format',
            readonly : 1
        });
    </script>

    
}