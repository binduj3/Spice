@model Spice.Models.ViewModels.SubCategoryandCategoryViewModel
@using Spice.Extenstion;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Delete Sub Category</h2>
<br />
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class=" backgroundWhite row">

    <div class="col-8 ">
        <form method="post" asp-action="Delete">
            <input type="hidden" asp-for="SubCategory.CategoryId" />
            <input type="hidden" asp-for="SubCategory.Id" />
            <div class=" backgroundWhite">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <select id="ddlCategoryList" asp-for="SubCategory.CategoryId" disabled class="form-control" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)">
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SubCategory.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SubCategory.Name" disabled class="form-control" />
                    </div>
                    <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-5 offset-3">
                        <partial name="_DeleteAndBackToListButton" model="Model.SubCategory.Id" />
                    </div>
                </div>
            </div>
        </form>
    </div>

   </div>
